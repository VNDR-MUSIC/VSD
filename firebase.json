{
  "functions": {
    "runtime": "nodejs20",
    "timeoutSeconds": 120,
    "memory": "1GB"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
